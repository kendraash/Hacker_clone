<h1>Hacker News</h1>

<div class="container">
  <table id="links_table">
    <% counter = 0 %>
    <% @links.each do |link| %>
      <% counter+=1 %>
      <tr>
        <td><%= counter %></td>
        <td><a href='<%= link.url %>'><%= link.title %></a></td>
        <td><%= link.points %></td>
        <td><%= link_to 'comments', link_comments_path(link) %></td>
        <td><%= link.created_at.strftime('%a %l') %>:<%= link.created_at.strftime('%M') %></td>
        <td>
          <%= form_for link do |f| %>
            <%= hidden_field(:f, :points, :value => '1') %>
            <input type="image" src='assets/upvote.png' value="" class='ui-glyphicon upvote-image'>
          <% end %>
        </td>
      </tr>

    <% end %>
  </ul>

</div>
